/** app.wxss **/

/********************************* common **************************/

page {
  font-family: "微软雅黑";
  overflow: scroll;
}

page::-webkit-scrollbar {
  height: 0px;
  width: 0px;
  color: transparent;
}

navigator:hover,.navigator-hover {
  background: none;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.pageWrapper {
  width: 100%;
  height: 100%;
  font-size: 14px;
}

.floatR{
  float: right
}
/* 删除线 */

.line-delete {
  text-decoration: line-through;
  font-size: 12px;
  color: #999;
}

.bgeee {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

button.save-edit {
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
  color: #fff;
  background: #1aad19;
  margin-top: 20px;
}

/********************************* tab bottom **************************/

.tab-Wrapper {
  width: 100%;
  padding: 5px 0px 0px 0px;
  position: fixed;
  bottom: 0px;
  text-align: center;
  border-top: 1px solid #eee;
  background: #fff;
  font-size: 14px;
}

.tab-Wrapper .tab-item {
  float: left;
  width: 50%;
  text-align: center;
}

.tab-item image {
  width: 25px;
  height: 25px;
}

.tab-item text {
  display: block;
}
