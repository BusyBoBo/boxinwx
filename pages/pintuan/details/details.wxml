<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{prod_images}}" wx:for-item="item">
    <swiper-item>
      <image mode='widthFix' src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<view class='shop-info'>
  <view class='price'>
    <text class='nowPrice'>¥{{productInfo.prod_single_price}}</text>
    <text class='line-delete'>¥{{productInfo.prod_old_price}}</text>
    <text class='priceCutDown'>拼团立减4.99元</text>
  </view>
  <view class='floatR haved'>已有
    <view>
      <text class='red'>{{productInfo.prod_group_num}}</text>人参团</view>
  </view>
  <view class='title'>
    <view>{{productInfo.prod_desc}}</view>
    <view class='title-tip'></view>
  </view>
</view>

