<view class="pageWrapper">
  <view>


    <!-- tab header -->
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">

      <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">
        全部
      </view>

      <block wx:for="{{category}}" wx:for-item="item" wx:for-index="idx">
        <view class="tab-item {{currentTab==idx+1?'active':''}}" data-current="{{item.id}}" bindtap="swichNav">
          {{item.cate_name}}
        </view>
      </block>

    </scroll-view>
    <!-- tab content -->
    <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab">
      <swiper-item wx:for="{{productList}}" wx:for-item="item" data-id='{{item.id}}' wx:for-index="idx">
        <scroll-view scroll-y="true" class="scoll-h">
          <!-- <block wx:for="{{[0,1,2,3]}}">  -->
          <navigator url='details/details?id={{item.id}}'>
            <view class='goods-Wrapper' bindtap='clickList'>
              <image mode='widthFix' class="goods-img" src='{{item.prod_images}}'></image>
              <view class="goods-info">
                <view>{{item.prod_name}}</view>
                <view>
                  <text class='price'>{{item.prod_single_price}}</text>
                  <text class='line-delete'>
										¥{{item.prod_old_price}}
									</text>
                  <label>
                    <button class="mgr-5">
                      <image mode='widthFix' src='../../image/icon1.png'></image>
                      1人团
                    </button>
                    <button class="mgl-5">
                      <image mode='widthFix' src='../../image/icon2.png'></image>
                      去开团
                    </button>
                  </label>
                </view>
              </view>
            </view>
          </navigator>
          <!-- </block>  -->
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
  <!-- bottom tab -->
  <include src="../foot-tab.wxml" />
</view>